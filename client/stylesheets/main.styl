@import 'nib';
@import url(https://fonts.googleapis.com/css?family=Roboto:400,900,700,500,300);


$bg-color = #FAFAFA;
$primary-color = #e6671e;
$accent-color = #FFEB3B;
$base-height = 32px;

//helpers
.no-padding
	padding 0
	margin 0
	
.paper-shadow-z1
	box-shadow 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12)!important
	
.paper-shadow-z2
	box-shadow 0 3px 10px rgba(0,0,0,0.16), 0 3px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z3
	box-shadow 0 10px 30px rgba(0,0,0,0.19), 0 6px 10px rgba(0,0,0,0.23)!important
	
.paper-shadow-z4
	box-shadow 0 14px 45px rgba(0,0,0,0.25), 0 10px 18px rgba(0,0,0,0.22)!important
	
.paper-shadow-z5
	box-shadow 0 19px 60px rgba(0,0,0,0.3), 0 15px 20px rgba(0,0,0,0.22)!important
	
.divider
	height 1px
	width 100%
	border-top 1px solid #E0E0E0

body
	font-family 'Roboto'
	background $bg-color
	font-smoothing antialiased
	overflow-scrolling touch

a, a:hover, a:active, a:focus
	outline none
	text-decoration none

.container-fluid
	background $bg-color
	padding 0
	
.container
	max-width 960px
	@media screen and (min-width: 1200px)
		padding 0
	
.header
	position fixed
	width 100%
	height $base-height * 2
	background-color $primary-color
	@extend .paper-shadow-z1
	z-index 99

.header::after
	content ''
	width 100%
	max-width 960px
	height 70px
	position absolute
	top 0
	left calc(50% - 480px)
	z-index 9
	background-image url(../img/bg/header.png)
	margin 0 auto
		
	
.header__title
	text-align center
	color #FFF
	text-transform uppercase
	font-size 1.45em
	font-weight 700
	padding 20px
	margin 0
	text-shadow 0 0 1px #9E9E9E
	position relative
	z-index 10
	@media screen and (max-width: 600px)
		padding 23px
		font-size 1.2em
	@media screen and (max-width: 480px)
		padding 25px
		font-size 1em
		
		
.container-margin
	margin-top 64px
		
.card
	position relative
	width 100%
	max-width 720px
	height auto
	min-height 400px
	margin 20px 0
	background-color #FFF
	@extend .paper-shadow-z1
	border-radius 2px
	@media screen and (max-width: 1200px)
		margin 20px auto

.card__cover
	width 100%
	height 300px
	background-repeat no-repeat
	background-size cover
	background-position center
	border-radius 2px 2px 0 0
	@media screen and (max-width: 600px)
		height 200px
		
.card__title
	font-weight 900
	text-transform uppercase
	margin 0
	padding 20px 20px 10px 20px
	opacity 0.8
	
.card__anonce
	font-weight 300
	padding 10px 20px 20px 20px
	@media screen and (max-width: 600px)
		font-size 0.9em
	
.btn-container
	position relative
	width 100%
	height 68px	
	
.card-btn
	position absolute
	right 0
	bottom 0
	width 120px
	color $primary-color
	text-align center
	padding 8px 16px
	margin 16px
	text-transform uppercase
	border 1px solid $primary-color
	border-radius 3px
	
.ali-pagination
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items center
	margin-bottom 10px
	max-width 720px
	
.info
	width 100%
	max-width 720px
	height auto
	min-height 100px	
	margin 20px auto
	background-image linear-gradient(45deg, #F6821F, $primary-color)
	border-radius 2px
	@extend .paper-shadow-z1
	@media screen and (min-width: 1200px)
		position fixed
		top 64px
		left calc(50% + 260px) 
		width 220px
	
	
.social
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items center	
	padding 20px 20px 10px 20px
	
.social__item
	width 57px
	height 57px
	margin 2px
	background-repeat no-repeat
	background-size cover
	background-position center
	border-radius 2px
	border 3px solid #FFF
	
.social__item--vk
	background-image url(../img/social/vk.png)
	
.social__item--youtube
	background-image url(../img/social/youtube.png)
	
.social__item--instagram
	background-image url(../img/social/instagram.png)

	
.contest
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	align-items center
	padding 10px 20px 20px 20px
	
.contest__icon
	width 29px
	height 33px
	background-image url(../img/icons/gift.png)
	background-repeat no-repeat
	background-size cover
	background-position center
	margin 0 0 0 20px
	float left
	
.contest__title
	text-transform uppercase
	color $primary-color
	font-weight 700
	margin 10px 10px 0 10px
	color #FFF
	
.contest__links
	width 100%
	margin 10px 0 0 5px
	@media screen and (min-width: 1200px)
		text-align center
	
.links-item
	margin 0 5px
	color #FFF
	border-bottom 1px dotted #FFF
	&:hover
		color #2196F3
		border-bottom 1px dotted #2196F3
	@media screen and (min-width: 1200px)
		line-height 2
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
